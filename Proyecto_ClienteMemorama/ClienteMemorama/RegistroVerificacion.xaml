<Window x:Class="ClienteMemorama.RegistroVerificacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClienteMemorama"
        mc:Ignorable="d"
        Title="RegistroVerificacion"
        SizeToContent="WidthAndHeight"
        WindowStyle="None">
    <StackPanel>
        <TextBlock Text="mensajecorreo" Width="150" TextAlignment="Center" TextWrapping="Wrap" Margin="0,10,0,0"/>
        <TextBox x:Name="codigoCorreo" Height="40" Width="80" MaxLength="5" FontSize="18" Margin="0,10,0,0" BorderThickness="3" BorderBrush="Black"/>
        <Button x:Name="enviaCorreo" Content="enviarcorreo" Click="ClicReintentarCorreo" Margin="20,10,20,0" />
        <Grid Width="200" Margin="0,10,0,10">
            <Button Content="regresar" HorizontalAlignment="Center" Click="ClicRegresar" Margin="0,0,80,0"/>
            <Button Content="verificar" HorizontalAlignment="Center" Click="ClicComprobarCodigo" Margin="80,0,0,0" />
        </Grid>
    </StackPanel>
</Window>
